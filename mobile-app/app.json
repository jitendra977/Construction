{
  "expo": {
    "name": "Mero Ghar",
    "slug": "mero-ghar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "platforms": [
      "ios",
      "android"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.construction.mobileapp",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow app to access your camera to take photos of construction progress.",
        "NSPhotoLibraryUsageDescription": "Allow app to access your photos to upload construction progress images.",
        "NSMicrophoneUsageDescription": "Allow app to access your microphone for video recording."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "e1995a83-9ce9-4fe0-a351-9ee1f0cd7151"
      }
    }
  }
}